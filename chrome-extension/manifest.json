{
  "manifest_version": 3,
  "name": "Court Data Collector",
  "version": "2.0.2",
  "description": "Расширение для сбора данных судебных дел с улучшенным интерфейсом",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "unlimitedStorage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "Сбор данных приказных",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["assets/styles/content.css"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "sidebar.html",
        "assets/styles/sidebar.css",
        "assets/styles/content.css",
        "assets/scripts/logger.js",
        "assets/scripts/data-collector.js",
        "assets/scripts/sidebar.js",
        "assets/icons/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}