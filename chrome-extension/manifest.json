{
  "manifest_version": 3,
  "name": "Court Data Collector",
  "version": "2.0.0",
  "description": "Extension for collecting court data and managing contacts with right sidebar integration",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "Court Data Collector",
    "default_icon": {
      "16": "assets/icons/icon16.svg",
      "32": "assets/icons/icon32.svg",
      "48": "assets/icons/icon48.svg",
      "128": "assets/icons/icon128.svg"
    }
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "css": ["assets/styles/content.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "assets/icons/icon16.svg",
    "32": "assets/icons/icon32.svg",
    "48": "assets/icons/icon48.svg",
    "128": "assets/icons/icon128.svg"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "sidebar.html", 
        "assets/styles/*",
        "assets/scripts/*",
        "assets/icons/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}